<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget54"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.05" >

     
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2" >

        <LinearLayout
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" 
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/made" />
        </LinearLayout>
        
    </RelativeLayout>
      <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.05" >

     
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical" >

            <LinearLayout style="@style/LayoutStyle" >

                <TextView
                    android:id="@+id/tRegNombre"
                    style="@style/LabelStyle"
                    android:text="NOMBRE Y APELLIDO: " />

                <EditText
                    android:id="@+id/RegNombre"
                    style="@style/InputStyle" />
            </LinearLayout>

            <LinearLayout style="@style/LayoutStyle" >

                <TextView
                    android:id="@+id/tRegCedula"
                    style="@style/LabelStyle"
                    android:text="CI: " />

                <EditText
                    android:id="@+id/RegCedula"
                    style="@style/InputStyle" />
            </LinearLayout>

            <LinearLayout style="@style/LayoutStyle" >

                <TextView
                    android:id="@+id/tRegEmail"
                    style="@style/LabelStyle"
                    android:text="E-MAIL: " />

                <EditText
                    android:id="@+id/RegEmail"
                    style="@style/InputStyle" />
            </LinearLayout>

            <LinearLayout style="@style/LayoutStyle" >

                <TextView
                    android:id="@+id/tRegCelular"
                    style="@style/LabelStyle"
                    android:text="CELULAR: " />

                <EditText
                    android:id="@+id/RegCelular"
                    style="@style/InputStyle" />
            </LinearLayout>

          

            <LinearLayout style="@style/LayoutStyle" >

                <TextView
                    android:id="@+id/tRegNacimiento"
                    style="@style/LabelStyle"
                    android:text="FECHA DE NACIMIENTO:" />

                <EditText
                    android:id="@+id/RegNacimiento_day"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/RegNacimiento_month"
                    android:layout_width="50dp"
                    android:layout_height="40dp" />

                <EditText
                    android:id="@+id/RegNacimiento_year"
                    android:layout_width="90dp"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/enviar"
                    android:text="@string/registrar_editar_bt"
                    android:textColor="#00FFFFFF"
                    android:textSize="20sp" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.20" 
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/pack" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.05" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonReset"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="#22ffffff"
                android:text="@string/reset_editar_bt"
                android:textColor="#002fc4"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonFile"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="#22ffffff"
                android:text="@string/registrar_file_bt"
                android:textColor="#002fc4"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>